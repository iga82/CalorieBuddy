<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ title }}</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jquerymobile/1.4.3/jquery.mobile.min.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquerymobile/1.4.3/jquery.mobile.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src='/javascripts/globals.js'></script>
        <script type="text/javascript" src="/javascripts/caloriebuddy.js"></script>
    </head>
    <body>
        <div>
              <h1>{{ title }}</h1>
              <p>Welcome to {{ title }}</p>
        </div>

        <!-- input group for macros -->
        <div class="container-fluid">
            <div class="row">
                <h4>Please Enter the grams in one serving for the following:</h3>
            </div>
            <div class="row">
                <form class="form-inline">
                    <input type="text" class="form-control" id="carb-input" placeholder="Carbs">
                    <input type="text" class="form-control" id="protein-input" placeholder="Protein">
                    <input type="text" class="form-control" id="fat-input" placeholder="Fat">
                    <input class="btn btn-success" id="done" type="submit" value="Done">
                </form>
            </div>
        </div>

        <div>
            <h1 class="calorieTotal" style="color: red;">0</h1>
        </div>

        <div id="macro-info" style="display: none;">
            <h3>Percentages rounded to nearest integer:</h5>
            <h4 id="carb-percentage" style="color: red;"></h4>
            <h4 id="protein-percentage" style="color: green;"></h4>
            <h4 id="fat-percentage" style="color: blue;"></h4>
        </div>

        <div class="row item-select-div">
        </div>

        <div style="padding-top: 10px;">
              <input class="btn btn-danger add-new-item" type="button" value="New Item">
              <input class="btn btn-success done" type="submit" value="Submit">
        </div>
    </body>
</html>